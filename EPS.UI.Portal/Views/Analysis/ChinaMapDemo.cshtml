<section class="content-header">
    <h1>
        ChinaMapDemo
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li>农业业务</li>
        <li><a href="SchemeList">农业大数据分析</a></li>
        <li class="active">地图展示</li>
    </ol>
    <hr style="margin:15px 0px 0px 0px;height:1px;border:0px;background-color:#D5D5D5;color:#D5D5D5;" />
</section>

<section class="content" style="background-color:#ffffff">
    <div class="ibox float-e-margins">
        @*title*@
        <form action="@Url.Action("_AgriculturalBarChart")" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#barchart" data-ajax-success="afterclick" id="form0" method="get">
            <div style="float:left">
                <input type="hidden" name="barId" value="bar1" />
                &nbsp<button id="btnSearch" class="btn btn btn-primary hidden" type="submit"> <i class="fa fa-search"></i> 搜索</button>
            </div>
        </form>

        <form action="@Url.Action("_AgriculturalBarChart")" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#barchart2" id="form0" method="get">
            <div style="float:left">
                @*<input type="hidden" name="beginYear" value="2018" />*@
                <input type="hidden" name="barId" value="bar2" />
                &nbsp<button id="btnSearch2" class="btn btn btn-primary hidden" type="submit"> <i class="fa fa-search"></i> 搜索</button>
            </div>
        </form>

        <form action="@Url.Action("_ChinaMap")" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#chinamapcontainer" id="form0" method="get">
            <div style="float:left">
                @*<input type="hidden" name="beginYear" value="2018" />
                <input type="hidden" name="barId" value="bar2" />*@
                &nbsp<button id="btnSearch3" class="btn btn btn-primary hidden" type="submit"> <i class="fa fa-search"></i> 搜索</button>
            </div>
        </form>

        @*content*@
        <div id="contentList" class="container-fluid">
            <div class="row-fluid">
                @*chart*@
                <div class="col-md-6" style="height:620px;border-right:ridge">
                    <!--Sidebar content-->
                    <!-- BAR CHART -->
                    <div class="box box-success" style="height:300px">
                        <div class="box-header with-border">
                            <h3 class="box-title" style="font-weight:bold;color:#00A65A">品种对比</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="col-md-4" style="font-weight:bold;line-height:30px">年末耕地面积（公顷）<br />农用化肥施用量（吨）<br />钾肥（吨）<br />粮食作物合计总产量(吨)<br />牛（头）<br />猪年末存栏数（头）<br />羊年末存栏数（头）<br />家禽年末存栏数（只）</div>
                            <div id="barchart" class="col-md-8"></div>
                        </div>
                        <!-- /.box-body -->
                    </div>

                    <div class="box box-success" style="height:300px">
                        <div class="box-header with-border">
                            <h3 class="box-title" style="font-weight:bold;color:#00A65A">区域对比</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="col-md-4" style="font-weight:bold;line-height:30px">北京<br />上海<br />广州<br />深圳<br />...</div>
                            <div id="barchart2" class="col-md-8"></div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>

                @*map*@
                <div id="chinamapcontainer" class="col-md-6">
                    <!--Body content-->
                </div>
            </div>
        </div>

    </div>
</section>

<script src="~/wwwroot/js/echarts.min.js"></script>
<script src="~/wwwroot/js/china.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<script>
    function randomData() {
        return Math.round(Math.random() * 500);
    }

    function afterclick() {
        var search2 = $("#btnSearch2")
        search2.click()
    }

    $(function () {
        var search = $("#btnSearch")
        search.click()

        $('#btnSearch3').click()
    })
    
    
</script>