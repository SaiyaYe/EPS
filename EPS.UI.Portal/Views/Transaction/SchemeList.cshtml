@using EPS.UI.Portal.Models
<link href="/wwwroot/lib/layer/theme/default/layer.css" rel="stylesheet" />

@{
    ViewBag.Title = "SchemeList";
    List<PatrolSchemeModel> patrolSchemeList = ViewBag.Model as List<PatrolSchemeModel>;
}

<section class="content-header">
    <h1>
        巡检计划
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li>电力巡检业务</li>
        <li class="active">巡检计划</li>
    </ol>
    <hr style="margin:15px 0px 0px 0px;height:1px;border:0px;background-color:#D5D5D5;color:#D5D5D5;" />
</section>

<section class="content container-fluid">
    <div class="ibox float-e-margins">
        @*title*@
        <form action="@Url.Action("_SchemeList")" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#contentList" id="form0" method="get">
            <div style="float:left">
                @Html.Action("CompanyDepartmentGroupEmployee", "Select")
            </div>
            <div style="float:left">
                @Html.Action("PatrolRoute", "Select")
                @*&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp*@
            </div>
            <div style="float:left">
                @*<label style="font-weight:lighter">巡检开始时间</label>
            <div class="input-group">
                @Html.Partial("Component/DateRangeSelection")
            </div>*@
            </div>
            <div style="float:left">
                @*<label style="font-weight:lighter">&nbsp巡检结束时间</label>
            <div class="input-group">
                @Html.Partial("Component/DateRangeSelection")
            </div>*@
            </div>
            <div style="float:left">
                &nbsp<button id="btnSearch" class="btn btn btn-primary" type="submit"> <i class="fa fa-search"></i> 搜索</button>
            </div>
            @Html.ActionLink("添加", "AddScheme", "Transaction", new { }, new { @class = "btn btn-success", style = "float:right" })
            @Html.ActionLink("导出", "ExportWord", "Transaction", new { }, new { @class = "btn btn-warning", style = "float:right" })
            <input id="pageSize" name="pageSize" type="hidden" />
            <input id="pageIndex" name="pageIndex" type="hidden" />
            <div style="clear:both"></div>
        </form>

        @*table*@
        <div class="box">
            <div id="contentList">

            </div>
        </div>
    </div>
</section>


<script src="/wwwroot/lib/jquery/dist/jquery.js"></script>
<script src="/wwwroot/lib/layer/layer.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script>

    $(function () {
        var pageSize = $("#setPageSize").val()
        $("#pageSize").val(pageSize)

        var search = $("#btnSearch")
        search.click()
    })
</script>
