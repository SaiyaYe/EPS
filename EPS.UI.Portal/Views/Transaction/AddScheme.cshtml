<section class="content-header">
    <h1>
        添加巡检计划
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li>电力巡检业务</li>
        <li><a href="SchemeList">巡检计划</a></li>
        <li class="active">添加巡检计划</li>
    </ol>
    <hr style="margin:15px 0px 0px 0px;height:1px;border:0px;background-color:#D5D5D5;color:#D5D5D5;" />
</section>


<section class="container body-content">
    <form role="form" method="post" action="/Transaction/AddScheme" class="form-horizontal col-lg-12">
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">计划编号</label><br />
                <input class="input-group col-lg-5" id="Number" name="Number">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">计划制定人</label><br />
                @Html.Action("CompanyDepartmentGroupEmployee", "Select")
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">巡检路线</label><br />
                @Html.Action("PatrolRoute", "Select")
            </div>
            <div class="form-group">
                <label>巡检时间</label><br />
                <div class="input-group col-lg-5">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="form-control pull-right" id="reservation" name="DateRange">
                </div>
                <!-- /.input group -->
            </div>

        </div>
        <!-- /.box-body -->
        <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-check"></i>确定</button>
        <a href="SchemeList" class="btn btn-default btn-lg"><i class="fa fa-close"></i>返回</a>
    </form>
</section>

<script>
    $(function () {
        //Date range picker
        $('#reservation').daterangepicker({
            "startDate": '@DateTime.Now.ToString("MM/dd/yyyy")',
            "endDate": '@DateTime.Now.AddMonths(1).ToString("MM/dd/yyyy")'
        }, function (start, end, label) {
            $('#reservation').val()
            console.log("New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')");
        });
    })
</script>