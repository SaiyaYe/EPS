<div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>计划路线名</th>
                <th>杆塔号</th>
                <th>缺陷编码</th>
                <th>缺陷类别</th>
                <th>巡检时间</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patrolReport in patrolReportList)
            {
                <tr>
                    <td>@patrolReport.PatrolRouteName<input type="hidden" name="patrolRouteId" value=@patrolReport.PatrolRouteId /></td>
                    <td>@patrolReport.PoleTowerName</td>
                    <td>@patrolReport.DefectCode</td>
                    <td>@patrolReport.DefectType</td>
                    <td>@patrolReport.ReportTime.ToString("yyyy-MM-dd")</td>

                    @*<td>@patrolReport.DefectType<input type="hidden" name="defectTypeId" value=@patrolReport.DefectTypeId /></td>*@
                </tr>
            }
        </tbody>
        @*<tfoot>
