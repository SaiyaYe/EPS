@using EPS.UI.Portal.Models
@{
    ViewBag.Title = "PatrolReportList";
    List<PatrolReportModel> patrolReportList = ViewBag.Model as List<PatrolReportModel>;
}

<select name="ddlTest" id="ddlTest">
    <option value="0">巡检部</option>
    <option value="1">抢修部</option>
</select>

<select name="ddlTest" id="ddlTest">
    <option value="0">巡检一组</option>
    <option value="1">巡检二组</option>
    <option value="2">抢修一组</option>
    <option value="3">抢修二组</option>
</select>

<select name="ddlTest" id="ddlTest">
    <option value="0">线路一</option>
    <option value="1">线路二</option>
    <option value="1">线路三</option>
</select>


@*<div class="box-header">
